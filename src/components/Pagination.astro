---
import { getBaseUrl } from "../utils/tools";
interface Props {
  currentPage: number;
  totalPages: number;
  path: string;
}

const { currentPage, totalPages, path } = Astro.props;

const baseUrl = getBaseUrl();
---

<nav class="flex justify-center gap-4 mt-12">
  {
    currentPage > 1 && (
      <a
        href={`${baseUrl}/${path}${currentPage - 1 > 1 ? currentPage - 1 : ""}`}
        class="px-4 py-2 bg-gray-100 dark:bg-gray-600 rounded hover:bg-gray-200 dark:hover:bg-primary-500"
      >
        Poprzednie
      </a>
    )
  }
  {
    currentPage < totalPages && (
      <a
        href={`${baseUrl}/${path}${currentPage + 1}`}
        class="px-4 py-2 bg-gray-100 dark:bg-gray-600 rounded hover:bg-gray-200 dark:hover:bg-primary-500"
      >
        NastÄ™pne
      </a>
    )
  }
</nav>
